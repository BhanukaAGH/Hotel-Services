<?xml version="1.0" encoding="UTF-8"?>
<endpoint name="sendSMS" xmlns="http://ws.apache.org/ns/synapse">
    <http method="post" uri-template="https://sendsms-hotelapi.herokuapp.com/send-sms">
        <suspendOnFailure>
            <initialDuration>-1</initialDuration>
            <progressionFactor>1.0</progressionFactor>
        </suspendOnFailure>
        <markForSuspension>
            <retriesBeforeSuspension>0</retriesBeforeSuspension>
        </markForSuspension>
    </http>
</endpoint>
